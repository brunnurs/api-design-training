{
  "swagger": "2.0",
  "info": {
    "description": "",
    "version": "1.0.0",
    "title": "Superheros"
  },
  "paths": {
    "/superheros": {
      "get": {
        "summary": "list all superheros",
        "description": "",
        "responses": {
          "200": {
            "description": "Not Found"
          },
          "404": {
            "description": "OK"
          }
        }
      },
      "post": {
        "summary": "Add a new superhero",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Superhero which is added to the store. Contains no ID",
            "required": true,
            "schema": {
              "$ref": "#/definitions/superHero"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/superHero_withID"
            },
            "headers": {
              "Location": {
                "description": "superhero/34",
                "type": "string"
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "schema": {
              "$ref": "#/definitions/validation_error"
            }
          }
        }
      }
    },
    "/superheros/{superheroId}/super-villains": {
      "get": {
        "summary": "list all enemies of a superhero",
        "description": "",
        "parameters": [
          {
            "in": "path",
            "name": "superheroId",
            "description": "ID of the superhero",
            "required": true,
            "type": "integer"
          },
          {
            "in": "query",
            "name": "embed",
            "description": "Load related resource representations",
            "required": true,
            "type": "string",
            "format": "string",
            "default": "dummy"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/superVillains_withAttributes"
            }
          },
          "404": {
            "description": "Superhero not Found"
          }
        }
      }
    },
    "/super-villains": {
      "put": {
        "summary": "Add a new super villain",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Super villain ",
            "required": true,
            "schema": {
              "$ref": "#/definitions/superVillain"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/superVillain"
            },
            "headers": {
              "Location": {
                "description": "super-villain/veom",
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "superHero": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Spiderman"
        },
        "hasCape": {
          "type": "boolean",
          "example": false
        }
      }
    },
    "superHero_withID": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "example": "34"
        },
        "name": {
          "type": "string",
          "example": "Spiderman"
        },
        "hasCape": {
          "type": "boolean",
          "example": false
        }
      }
    },
    "superVillain": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "veom"
        },
        "name": {
          "type": "string",
          "example": "Venom"
        },
        "scaleOfEvil": {
          "type": "integer",
          "example": 4
        }
      }
    },
    "superVillains_withAttributes": {
      "type": "array",
      "items": {
        "example": {
          "id" : "ares",
          "name" : "Ares",
          "scaleOfEvil" : 5,
          "abilities":[
            {
              "id" : 300,
              "name" : "super human strength",
              "power": 9
            },
            {
              "id" : 306,
              "name" : "complete command over any weapon",
              "power": 5
            }
          ]
        }
      }
    },
    "validation_error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "example": "2344234"
        },
        "message": {
          "type": "string",
          "example": "Validation Failed"
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "string",
            "example": {
              "code" : 5432,
              "field" : "name",
              "message" : "name cannot have fancy characters"
            }
          }
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  }
}