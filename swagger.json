{
  "swagger": "2.0",
  "info": {
    "description": "",
    "version": "1.0.0",
    "title": "Superheros"
  },
  "paths": {
    "/superheros": {
      "get": {
        "summary": "list, filter and sort superheros",
        "parameters": [
          {
            "in": "query",
            "name": "fights",
            "description": "Super villains this superhero fights against",
            "required": false,
            "type": "string",
            "default": "ares"
          },
          {
            "in": "query",
            "name": "hasCape",
            "description": "Is the superhero wearing a cape?",
            "required": false,
            "type": "boolean",
            "default": true
          },
          {
            "in": "query",
            "name": "sort",
            "description": "sort parameters seperated by comma",
            "required": false,
            "type": "string",
            "default": "-name,dummy"
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "schema": {
              "$ref": "#/definitions/superheros_filtering"
            }
          }
        }
      },
      "post": {
        "summary": "Add a new superhero",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Superhero which is added to the store. Contains no ID",
            "required": true,
            "schema": {
              "$ref": "#/definitions/superHero"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/superHero_withID"
            },
            "headers": {
              "Location": {
                "description": "superhero/34",
                "type": "string"
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "schema": {
              "$ref": "#/definitions/validation_error"
            }
          }
        }
      }
    },
    "/teams/{teamId}/superheros": {
      "get": {
        "summary": "list all superheros of a team",
        "description": "",
        "parameters": [
          {
            "in": "path",
            "name": "teamId",
            "description": "ID of a superhero team",
            "required": true,
            "type": "integer",
            "default": 1001
          },
          {
            "in": "query",
            "name": "expand",
            "description": "Load related resource representations",
            "type": "string",
            "format": "string",
            "default": "abilities"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/superheros_withAttributes"
            }
          },
          "404": {
            "description": "Team not Found"
          }
        }
      }
    },
    "/super-villains": {
      "put": {
        "summary": "Add a new super villain",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Super villain ",
            "required": true,
            "schema": {
              "$ref": "#/definitions/superVillain"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/superVillain"
            },
            "headers": {
              "Location": {
                "description": "super-villain/veom",
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "superHero": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Spiderman"
        },
        "hasCape": {
          "type": "boolean",
          "example": false
        }
      }
    },
    "superHero_withID": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "example": "34"
        },
        "name": {
          "type": "string",
          "example": "Spiderman"
        },
        "hasCape": {
          "type": "boolean",
          "example": false
        }
      }
    },
    "superVillain": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "veom"
        },
        "name": {
          "type": "string",
          "example": "Venom"
        },
        "scaleOfEvil": {
          "type": "integer",
          "example": 4
        }
      }
    },
    "superheros_withAttributes": {
      "type": "array",
      "items": {
        "example": [
          {
            "id": 501,
            "name": "Thing",
            "hasCape": false,
            "abilities": [
              {
                "id": 300,
                "name": "super human strength",
                "power": 9
              },
              {
                "id": 303,
                "name": "rock-like skin",
                "power": 7
              }
            ]
          }
        ]
      }
    },
    "superheros_filtering": {
      "type": "array",
      "items": {
        "example": [
          {
            "id": 500,
            "name": "Wonder Woman",
            "hasCape": true
          }
        ]
      }
    },
    "validation_error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "example": "2344234"
        },
        "message": {
          "type": "string",
          "example": "Validation Failed"
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "string",
            "example": {
              "code" : 5432,
              "field" : "name",
              "message" : "name cannot have fancy characters"
            }
          }
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  }
}